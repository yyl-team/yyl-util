{
  "version": "3.0.0",
  "private": true,
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "yyl-react"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/output",
    "**/output",
    "/test"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "scripts": {
    "bootstrap": "yarn install & npm run prettier",
    "eslint": "eslint --ext=jsx,ts,tsx ./",
    "prettier": "prettier --write ./**",
    "dev": "rollup --config ./rollup.config.js --environment",
    "d": "rollup --config ./rollup.config.js --environment",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.js --environment",
    "w": "rollup --watch --config ./rollup.config.js --environment",
    "prepublishOnly": "npm run prettier & npm test doc",
    "test": "npm run build all & jest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^7.25.0",
    "eslint-config-yyl-react": "^1.0.1",
    "jest": "26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rollup": "^2.38.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "typedoc": "^0.20.20",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.3"
  },
  "name": "yyl-util",
  "description": "yyl util lerna manage",
  "repository": "https://github.com/yyl-team/yyl-util.git",
  "author": "jackness1208",
  "workspaces": ["./packages/*"],
  "license": "MIT"
}
